<div class="container">
  <div class="row">
    <div class="col-12">
      <h2>商品一覧（全<>件）</h2>
    </div>
    <% @items.each do |item| %>
    <div class="col-md-3 pt-3">
      <div>
      <%= link_to public_item_path(item.id) do %>
        <%= attachment_image_tag item, :image, :fill, 250, 200 %>
      <% end %>
      <p><%= item.name %></p>
      <p><%= item.price %></p>
      </div>
    </div>
    <% end %>
  </div>
</div>