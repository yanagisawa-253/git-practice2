<div class="containar">
  <div class="row">
    <div class="col-sm-10 col-md-8 mx-auto">
      <h2><%= @customer.full_name %>さんの会員情報編集</h2>
      <%= form_with model: @customer, url:"/customes/#{@customer.id}", local:true do |f| %>
      <div class="form-group">
        <label for="custmer-id">会員ID</label>
        <%= @customer.id %>
      </div>
      <div class="form-group">
        <label for="customer-name">氏名</label>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
      </div>
      <div class="form-group">
        <label for="customer-kana">フリガナ</label>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
      </div>
      <div class="form-group">
        <label for="csutomer-postal_code">郵便番号</label>
        <%= f.text_field :postal_code %>
      </div>
      <div class="form-group">
        <label for="customer-address">住所</label>
        <%= f.text_field :address %>
      </div>
      <div class="form-group">
        <label for="customer-telephone_number">電話番号</label>
        <%= f.text_field :telephone_number %>
      </div>
      <div class="form-group">
        <label for="customer-email">メールアドレス</label>
        <%= f.text_field :email %>
      </div>
      <div class="form-group">
        <label for="customer-status">会員ステータス</label>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-success">変更を保存</button>
      <% end %>
      </div>
    </div>
  </div>
</div>