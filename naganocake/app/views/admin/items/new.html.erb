<dic class="container">
  <div class="row">
    <div class="col-sm-12 col-lg-5 mx-auto">
      <h2 class="mb-3">商品新規登録</h2>
      <%= form_with model: [ :admin, @item], local:true do |f| %>
        <div class= "form-group">
          <label for="image">商品画像</label>
          <%= f.attachment_field :image %>
        </div>
        <div class= "form-group">
          <label for="name">商品名</label>
          <%= f.text_field :name %>
        </div>
        <div class= "form-group">
          <label for="introduction">商品説明</h4>
          <%= f.text_area :introduction %>
        </div>
        <div class= "form-group">
          <label for="genre">ジャンル</label>
          <%= f.select :genre_id, [['ケーキ',1], ['プリン',2], ['焼き菓子',3]] %>
        </div>
        <div class= "form-group">
          <label for="active">販売ステータス</label>
        </div>
        <div class= "form-group">
          <button type="submit" class="btn btn-success">新規登録</button>
        </div>
      <% end %>
    </div>
  </div>
</dic>
