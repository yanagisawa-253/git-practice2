<div class="containar">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <br>
      <h2 class="pl-5">新規会員登録</h2>
      <br>
      <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        
      <div class="form-group">
        <span class="col-2">名前</span>
        <label class="col-sm-10 col-form-label">姓<%= f.text_field :last_name, autofocus: true %> 名<%= f.text_field :first_name, autofocus: true %></label>
      </div>
      
      <div class="form-group">
        <span class="col-2">フリガナ</span>
        <label class="col-sm-10">(セイ)<%= f.text_field :last_name_kana, autofocus: true %>(メイ)<%= f.text_field :first_name_kana, autofocus: true %></label>
      </div>

      <div class="form-group">
        <label for="email" class="col-2">メールアドレス</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
  
      <div class="form-group">
        <%= f.label :postal_code %>
        <%= f.text_field :postal_code, autofocus: true %>
      </div>
  
      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_field :address, autofocus: true %>
      </div>
  
      <div class="form-group">
        <%= f.label :telephone_number %>
        <%= f.text_field :telephone_number, autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <!--デフォルトはencryted_password機能としてpasswordにする-->
        <% if @minimum_password_length %>
        (<%= @minimum_password_length %> characters minimum)
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      <!--:ncrypted_password_confirmation-->
      </div>
      <br>
      <div class="actions">
        <button type="submit", class="btn btn-success">新規登録</button>
      </div>
      <br>
    <% end %>
      <p class="col-12 pl-3">既に登録済みの方</p>
      <p class="col-12 pl-5"><%= link_to 'こちら', new_customer_session_path %> からログインしてください。</p>
    </div>
  </div>
</div>
