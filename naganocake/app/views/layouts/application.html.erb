<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-3 border rounded" href="/">ながのCAKE</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if customer_signed_in? %>
              <li class="nav-item ">
                <%= link_to 'マイページ', public_customer_path(current_customer.id), class: 'nav-link text-dark border rounded' %>
              </li>
              <li class="nav-item">
                <%= link_to '商品一覧', public_items_path, class: 'nav-link text-dark border rounded' %>
              </li>            
              <li class="nav-item">
               <%= link_to 'カート', class: 'nav-link text-dark border rounded' %>
              </li>
              <li class="nav-item">
                <%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class: 'nav-link text-dark' %>
              </li>
              <% elsif admin_signed_in? %>
              <li class="nav-item">
                <%= link_to '商品一覧', admin_items_path, class: 'nav-link text-dark border rounded' %>
              </li>
              <li class="nav-item">
                <%= link_to '会員一覧', admin_customers_path, class: 'nav-link text-dark border rounded' %>
              </li>
              <li class="nav-item">
                <%= link_to '注文履歴一覧', admin_orders_path, class: 'nav-link text-dark border rounded' %>
              </li>
              <li class="nav-item">
                <%= link_to 'ジャンル一覧', admin_genres_path, class: 'nav-link text-dark border rounded' %>
              </li>
              <li class="nav-item">
                <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'nav-link text-dark border rounded' %>
              </li>
              <% else %>
              <li class="nav-item">
               <%= link_to 'About', '/homes/about', class: 'nav-link text-dark border rounded' %>
              </li>
              <li class="nav-item">
                <%= link_to '商品一覧', public_items_path, class: 'nav-link text-dark border rounded' %>
              </li>
              <li class="nav-item">
                <%= link_to '新規登録', new_customer_registration_path, class: 'nav-link text-dark border rounded' %>
              </li>
              <li class="nav-item">
                <%= link_to 'ログイン', new_customer_session_path, class: 'nav-link text-dark border rounded' %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    
    <main>
      <p class="notice">
        <% if flash[:notice] %>
        <%= notice %>
        <% end %>
      </p>
    </main>
    
    <%= yield %>
    
    <footer class="bg-dark">
      <div class="row">
        <div class="col-12 mx-auto">
            
        </div>
      </div>
    </footer>
  </body>
</html>
