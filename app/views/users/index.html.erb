  <main>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>


<div class="container px-5 px-sm-0">
  <div class="row">
  <%= render "devise/shared/sidebar", user: @user, books: @book %>
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
            <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg" %></td>
                <td><%= user.name %></td>
                <td><%= link_to 'Show', user_path(user) %></td>
                <!--user の値を渡してあげる-->
              </tr>
            <% end %>
            </tbody>
          </thead>
        </table>
    </div>
  </div>
</div>
</main>