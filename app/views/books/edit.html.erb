 <main>
 <% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-7 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <label for="book_body">Opinion</label>
        <%= f.text_area :body %>
      </div>
      <%= f.submit 'Update Book' %>
      </br>

      <span><%= link_to 'Show', book_path(@book) %></span>
      |
      <span><%= link_to 'Back', books_path %></span>
      <% end %>
    </div>
  </div>
</div>
</main>
