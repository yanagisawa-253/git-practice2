<!--部分テンプレート　　　詳細ページ＞ link_to user_path(user.id) do -->
          <div class="col-md-3">
              <h2>User info</h2>
              <table class="table">
                <tbody>
                  <tr>
                    <th><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg" %></th>
                  </tr>
                  <tr>
	                  <th>name</th>
	                  <th><%= user.name %></th>
                  </tr>
                  <tr>
	                  <th>introduction</th>
	                  <th><%= user.introduction %></th>
                  </tr>
                </tbody>
              </table>
              <div class="row">
                  <%= link_to " ", edit_user_path(user), class: "btn btn-outline-black btn-block fas fa-user-cog" %>
              </div>
              <!--(link_to_ifメソッド使ってみる)-->
              <h2 class="mt-3">New book</h2>
              <%= form_with model: books, local:true do |f| %>
              <div class="form-group">
                <label for="title">Title</label>
                <%= f.text_field :title %>
              </div>
              <div class="form-group">
                <label for="body">Opinion</label>
                <%= f.text_area :body %>
              </div>
              <div class="form-group">
                <br><%= f.submit 'Create Book' %></br>
                <% end %>
              </div>
        </div>
