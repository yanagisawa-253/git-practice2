<div class="containar">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <br>
      <h2 class="pl-5">新規会員登録</h2>
      <br>
      <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        
      <div class="form-group row">
        <span class="col-sm-4">名前</span>
        <div class="col-8">
        <label>姓<%= f.text_field :last_name, autofocus: true %> 名<%= f.text_field :first_name, autofocus: true %></label>
        </div>
      </div>
      
      <div class="form-group row">
        <span class="col-sm-4">フリガナ</span>
        <div class="col-8 ">
        <label>(セイ)<%= f.text_field :last_name_kana, autofocus: true %>(メイ)<%= f.text_field :first_name_kana, autofocus: true %></label>
        </div>
      </div>

      <div class="form-group row">
        <label for="email" class="col-4">メールアドレス</label>
        <div class="col-8">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>
  
      <div class="form-group row">
        <label for="postal_code" class="col-4">郵便番号(ハイフンなし)</label>
        <div class="col-8">
          <%= f.text_field :postal_code, autofocus: true %>
        </div>
      </div>
  
      <div class="form-group row">
        <label for="address" class="col-4">住所</label>
        <div class="col-8">
          <%= f.text_field :address, autofocus: true %>
        </div>
      </div>
  
      <div class="form-group row">
        <label for="telephone_number" class="col-4">電話番号</label>
        <div class="col-8">
          <%= f.text_field :telephone_number, autofocus: true %>
        </div>
      </div>

      <div class="form-group row">
        <label for="password" class="col-4">パスワード(6文字以上)</label>
        <!--デフォルトはencryted_password機能としてpasswordにする-->
        <div class="col-8">
          <% if @minimum_password_length %>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="password" class="col-4">パスワード(確認用)</label>
        <div class="col-8">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      <!--:ncrypted_password_confirmation-->
      </div>
      <br>
      <div class="actions">
        <button type="submit", class="btn btn-success">新規登録</button>
      </div>
      <br>
    <% end %>
      <p class="col-12 pl-3">既に登録済みの方</p>
      <p class="col-12 pl-5"><%= link_to 'こちら', new_customer_session_path %> からログインしてください。</p>
    </div>
  </div>
</div>
