<div class="container">
  <div class="row">
    <div class="col-md-5 pl-5">
      <h2 class="pt-3 pb-3">ジャンル一覧・追加</h2>
      <form class="form-inline">
        <%= form_with model: [ :admin, @genre], local:true do |f| %>
        <div class="form-group">
          <label for="genre">ジャンル名</label>
          <%= f.text_field :name %>
        </div>
        <div class="form-group mx-auto">
        <button type="submit" class="btn btn-success">新規登録</button>
        </div>
        <% end %>
      </form>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-4 pl-5">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル名</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
