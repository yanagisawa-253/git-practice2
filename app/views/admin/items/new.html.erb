<dic class="container">
  <div class="row">
    <div class="col-sm-12 col-lg-5 mx-auto">
      <h2 class="mb-3">商品新規登録</h2>
      <%= form_with model: [ :admin, @item], local:true do |f| %>
        <div class= "form-group row">
          <label for="image" class="col-sm-3 col-form-label">商品画像</label>
          <div class="col-sm-9">
            <%= f.attachment_field :image %>
          </div>
        </div>
        <div class= "form-group row">
          <label for="name" class="col-sm-3 col-form-label">商品名</label>
          <div class="col-sm-9">
            <%= f.text_field :name %>
          </div>
        </div>
        <div class= "form-group row">
          <label for="introduction" class="col-sm-4 col-form-label">商品説明</lable>
          <div class="col-sm-8">
            <%= f.text_area :introduction %>
          </div>
        </div>
        <div class= "form-group row">
          <label for="genre" class="col-sm-3 col-form-label">ジャンル</label>
          <div class="col-sm-9">
            <%= f.select :genre_id, [['ケーキ',1], ['プリン',2], ['焼き菓子',3]] %>
          </div>
        </div>
        <div class= "form-group row">
          <label for="genre" class="col-sm-3 col-form-label">税抜価格</label>
          <div class="col-sm-9">
            <%= f.text_field :price %>円
          </div>
        </div>
        <div class= "form-group">
          <label for="active" class="col-sm-4 col-form-label">販売ステータス</label>
        </div>
        <div class= "form-group">
          <button type="submit" class="btn btn-success">新規登録</button>
        </div>
      <% end %>
    </div>
  </div>
</dic>
