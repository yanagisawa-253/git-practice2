<div class="container">
  <div class="row">
    <div class="col-md-8 offset-2 mx-auto">
      <h2>商品詳細</h2>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td><%= attachment_image_tag @item, :image, :fill, 250, 200 %></td>
            <td>
            <table class="table">
              <tbody>
                <tr>
                  <td>商品名</td>
                  <td><%= @item.name %></td>
                </tr>
                <tr>
                  <td>商品説明</td>
                  <td><%= @item.introduction %></td>
                </tr>
                <tr>
                  <td>ジャンル</td>
                  <td><%= @item.genre_id %></td>
                </tr>
                <tr>
                  <td>税込価格</td>
                  <td><%= @item.price %>円</td>
                </tr>
                <tr>
                  <td>販売ステータス</td>
                  <td><%= @item.is_active %></td>
                </tr>
                <tr>
                  <td></td>
                  <td><%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success" %></td>
                </tr>
                </td>
              </tr>
              </tbody>
            </table>
        </tbody>
      </table>
    </div>
  </div>
</div>