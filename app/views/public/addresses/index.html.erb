<div class="container">
  <div class="row">
    <h2 class="pt-3 pb-3">発送先登録/一覧</h2>
    <div class="col-12">
    <%= form_with model: [:public, @address], local:true do |f| %>
      <div class="form-group">
        <label for="postal_code">郵便番号</label>
        <%= f.text_field :postal_code %>
      </div>
      <div class="form-group">
        <label for="address">住所</label>
        <%= f.text_field :address %>
      </div>
      <div class="form-group">
        <label for="name">宛名</label>
        <%= f.text_field :name %>
        <button type="submit" class="btn btn-success">新規登録</button>
      </div>
    <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-7 pl-1">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td><%= link_to '編集する', edit_public_address_path(address.id), class: 'btn btn-success' %>
                <%= link_to '削除する', public_address_path(address.id), method: :delete, data: { confirm: '削除しますか?'}, class: 'btn btn-danger' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>