<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>配送先編集</h2>
      <%= form_with model: [ :public, @address], local:true do |f| %>
      <div class="form-group">
        <label for="postal_code">郵便番号番号(ハイフンなし)</label>
        <%= f.text_field :postal_code %>
      </div>
      <div class="form-group">
        <label for="address">住所</label>
        <%= f.text_field :address %>
      </div>
      <div class="form-group">
        <label for="name">宛名</label>
        <%= f.text_field :name %>
        <button type="submit" class="btn btn-success">変更内容を保存</button>
        <% end %>
      </div>
    </div>
  </div>
</div>