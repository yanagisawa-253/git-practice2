<div class="container">
  <div class="row">
    <div class="col-8">
      <p>注文情報</p>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td><%= @order.address %></td>
          </tr>
          <tr>
            <th>支払い方法</th>
            <td><%= @order.pay_type %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @order.order_status %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-3">
      <table class="table table-bordered">
        <p>請求情報</p>
        <table class="table table-bordered">
          <tbody>
            <tr>
              <th>商品合計</th>
              <td><%= @order.total_payment %></td>
            </tr>
            <tr>
              <th>配送料</th>
              <td><%= @order.postage %></td>
            </tr>
            <tr>
              <th>ご請求金額</th>
              <td><%= @order.total_payment %></td>
            </tr>
          </tbody>
        </table>
      </table>
    </div>
    <div class="row">
      <div class="col-8 pr-4">
        <p>注文内容</p>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>商品</th>
              <th>単価(税込)</th>
              <th>個数</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
            <% @order_item.each do |order_item| %>
            <tr>
              <td><%= f.hidden_field :name, value: "item.name" %></td>
              <td><%= order_item.item.with_tax_price %></td>
              <td><%= f.select :amount, *[1..10] %></td>
              <!--データの受け渡しできていない-->
              <td><%= order_item.item.subtotal %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>