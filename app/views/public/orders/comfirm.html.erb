<div class="container">
  <div class="row">
    <div class="col-12">
      <h3 class="">注文情報確認画面</h3>
    </div>
    <div class="col-8">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.sum_of_price %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-3">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>送料</th>
            <td>800円</td>
          </tr>
          <tr>
            <th>商品合計</th>
            <td><%= @total %></td>
          </tr>
          <tr>
            <th>請求金額</th>
            <td><%= @total + 800 %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <label class="px-3 mr-3">支払い方法</label>
      <%= @order.pay_type %>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <label class="px-3 mr-3">お届け先</label>
      <%= @order.full_address %>
    </div>
  </div>
  <div class="row">
    <div class="col-12 text-center pr-5">
      <%= form_with model: [:public, @order], local:true do |f| %>
        <%= f.hidden_field :order_id, value: @order %>
        <%= f.hidden_field :name, value: @order.name %>
        <%= f.hidden_field :postal_code, value: @order.postal_code %>
        <%= f.hidden_field :address, value: @order.address %>
        <%= f.hidden_field :total_payment, value: @total %>
        <%= f.hidden_field :pay_type, value: @order.pay_type %>
        <%= f.submit "注文を確定する", class: "btn btn-success" %> 
        <!--まだcreta処理が終わっていないのでここでデータをhidden_fieldで受け渡す-->
      <% end %>
    </div>
  </div>
</div>