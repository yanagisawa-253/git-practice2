<div class="container">
  <div class="row">
    <div class="col-8">
      <h3 class="">注文情報確認画面</h3>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <!--データの格納が成功しているのでcart_itemeのitem.nameを表示する-->
            <td><= cart_item.item.with_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><= cart_item.subtotal %></td>
            <td><%= link_to '削除する', public_cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-3">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>送料</th>
            <td></td>
          </tr>
          <tr>
            <th>商品合計</th>
            <td></td>
          </tr>
          <tr>
            <th>請求金額</th>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      
    </div>
  </div>
</div>