<div class="container">
  <div class="row">
    <div class="col-12">
      <h3 class="">注文情報確認画面</h3>
    </div>
    <div class="col-8">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.sum_of_price %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-3">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>送料</th>
            <td>800円</td>
          </tr>
          <tr>
            <th>商品合計</th>
            <td><%= @total %></td>
          </tr>
          <tr>
            <th>請求金額</th>
            <td><%= @total + 800 %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <label class="px-3 mr-3">支払い方法</label>
      <%= @order.pay_type %>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <label class="px-3 mr-3">お届け先</label>
      <%= @order.full_address %>
    </div>
  </div>
  <div class="row">
    <div class="col-12 text-center pr-5">
      <%= link_to '注文を確定する', public_orders_thanks_path, class: "btn btn-success" %>
    </div>
  </div>
</div>