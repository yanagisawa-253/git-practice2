<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="mb-3">注文情報入力</h2>
      <%= form_with model: [:public, @order], url: public_orders_comfirm_path, local:true do |f| %>
        <div class="form-group">
          <label for="pay_type" class="col-2">支払い方法</label>
          <div class="col-10 ">
            <%= f.radio_button :pay_type, Order.pay_types.key(0), checked: "checked" %>
            <%= f.label :pay_type, Order.pay_types_i18n[:credit_card] %>
            </br>
            <%= f.radio_button :pay_type, Order.pay_types.key(1)  %>
            <%= f.label :pay_type, Order.pay_types_i18n[:transfer] %>
          </div>
        </div>
      
        <div class="form-group">
          <label for="address" class="col-2">お届け先</label>
          <div class="col-10">
            <%= f.radio_button :serlect_address, 0, checked: "checked" %>
            <%= f.label :address, "ご自身の住所" %><br>
            <%= @customer.postal_code %><%= @customer.address %></br>
            <%= @customer.full_name %>
            </br>
            <%= f.radio_button :serlect_address, 1 %>
            
            <%= f.label :address, "登録済み住所から選択" %>
            <%= f.select :address, options_from_collection_for_select(Address.all, :id, :full_address) %>
            </br>
            <%= f.radio_button :serlect_address, 2 %>
            <%= f.label :address, "新しいお届け先" %>
          </div>
            <div class="form-group row">
             <label for="inputpostal_code" class="col-3 col-form-label">郵便番号(ハイフンなし)</label>
            <div class="col-9">
              <%= f.text_field :postal_code, placeholder: "0000000" %>
            </div>
          </div>
          <div class="form-group row">
            <label for="inputaddress" class="col-3 col-form-label">住所</label>
            <div class="col-9">
              <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町０−０", :size => "40" %>
            </div>
          </div>
          <div class="form-group row">
            <label for="inputname" class="col-3 col-form-label">宛名</label>
            <div class="col-9">
              <%= f.text_field :name, placeholder: "令和道子" %>
            </div>
          </div>
        </div>
        <%= f.submit "確認画面へ進む", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>