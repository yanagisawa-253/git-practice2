<div class="container">
  <div class="rowmd-5">
    <%= link_to '編集する', edit_public_customer_path(@customer), class: 'btn btn-success' %>
  </div>
  <div class="row">
    <div class="col-10 offset-1">
      <table border='2'bordercolor="">
        <tbody>
          <tr>
            <td>氏名</td>
            <td><%= @customer.first_name %><%= @customer.last_name %></td>
          </tr>
          <tr>
            <td>カナ</td>
            <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メール</td>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-12 pl-5">
      <h5>配送先<%= link_to '一覧を見る', public_addresses_path, class: 'btn btn-primary' %></h5>
      <h5>注文履歴<%= link_to '一覧を見る', public_orders_path, class: 'btn btn-primary' %></h5>
    </div>
  </div>
</div>