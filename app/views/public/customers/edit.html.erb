<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>会員情報編集</h2>
      <%= form_with model: @cosutomer, local:true do |f| %>
        <div class="form-group">
          <label for="name">氏名</label>
          <%= f.text_field :last_name %>
          <%= f.text_field :first_name %>
        </div>
        <div class="form-group">
          <label for="namekana">カナ</label>
          <%= f.text_field :last_name_kana %>
          <%= f.text_field :first_name_kana %>
        </div>
        <div class="form-group">
          <label for="postal_code">郵便番号</label>
          <%=f.text_field :postal_code %>
        </div>
        <div class="form-group">
          <label for="address">住所</label>
          <%= f.text_field :address %>
        </div>
        <div class="form-group">
          <label for="telephone_number">電話番号</label>
          <%= f.text_field :telephone_number %>
        </div>
        <div class="email">
          <label for="email">メール</label>
          <%= f.text_field :email %>
        </div>
        <div class="btn-group">
          <button type="submit" class="btn btn-success">編集内容を保存</button>
          <%= link_to '退会する', public_unsubscribe_path, class: 'btn btn-denger' %>
        </div>
      <% end %>
    </div>
  </div>
</div>