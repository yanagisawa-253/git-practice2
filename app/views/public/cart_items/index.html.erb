<div class="container">
  <div class="row">
    <h2 class="col-8 offset-1">ショッピングカート</h2>
    <%= link_to 'カートを空にする', destroy_all_public_cart_items_path, method: :delete, class: "btn btn-danger mb-3" %>
  </div>
  <div class="row">
    <div class="col-10 offset-1">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <!--データの格納が成功しているのでcart_itemeのitem.nameを表示する-->
            <td><%= cart_item.item.with_tax_price %></td>
            <td>
              <%= form_for cart_item, url: public_cart_item_path(cart_item) do |f| %>
                <%= f.number_field :amount, min:1, max: 10 %><%= f.submit "更新", class: "btn btn-success mb-2" %>
              <% end %>
            </td>
            <td><%= cart_item.sum_of_price %></td>

            <td><%= link_to '削除する', public_cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-7 offset-1">
      <%= link_to "買い物を続ける", public_items_path, class: "btn btn-primary" %>
    </div>
    <div class="col-3">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>合計金額</th>
            <td><%= @total.round.to_s(:delimited)  %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to "情報入力に進む", new_public_order_path, class: "btn btn-success" %>
    </div>
  </div>
</div>