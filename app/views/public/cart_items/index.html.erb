<div class="containar">
  <div class="row">
      <h2 class="col-8 offset-1">ショッピングカート</h2>
      <%= link_to 'カートを空にする', public_cart_items_path, method: :destroy_all, class: "btn btn-danger mb-3" %>
  </div>
  <div class="row">
    <div class="col-10 offset-1">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <!--データの格納が成功しているのでcart_itemeのitem.nameを表示する-->
            <td><= cart_item.item.with_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><= cart_item.subtotal %></td>
            <td><%= link_to '削除する', public_cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>