<div class="containar">
  <div class="row">
    <div class="col-10 offset-1">
      <h2>ショッピングカート</h2>
      <%= link_to 'カートを空にする', current_customer.cart_item.destroy_all , class: "btn btn-danger" %>
      <!--削除リンク作成する-->
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= @cart_item.each do |cart_item| %>
          <tr>
            <td><%= f.hidden_field :name, value: "item.name" %></td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td><%= f.select :amount, *[1..10] %></td>
            <td><%= cart_item.item.subtotal %></td>
            <td><%= link_to '削除する', destroy_public_cart_item_path(@cart_item.id),method: :delete, class: "btn btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>